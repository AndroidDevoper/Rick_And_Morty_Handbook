<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.locations.FragmentLocation">

    <TextView
        android:id="@+id/fragment_location_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textColor="#090101"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.341" />

    <TextView
        android:id="@+id/fragment_location_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Type:"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_location_tv_name" />

    <TextView
        android:id="@+id/fragment_location_tv_dimension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dimension:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_location_tv_type"
        app:layout_constraintTop_toBottomOf="@+id/fragment_location_tv_type" />

    <TextView
        android:id="@+id/fragment_location_tv_isType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:text="TextView"
        android:textColor="#0B0101"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/fragment_location_tv_type"
        app:layout_constraintTop_toTopOf="@+id/fragment_location_tv_type" />

    <TextView
        android:id="@+id/fragment_location_tv_isDimension"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#090000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_location_tv_isType"
        app:layout_constraintTop_toTopOf="@+id/fragment_location_tv_dimension" />
</androidx.constraintlayout.widget.ConstraintLayout>